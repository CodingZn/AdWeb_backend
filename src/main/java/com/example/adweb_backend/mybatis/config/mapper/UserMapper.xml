<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.adweb_backend.dao.UserMapper">
    <select id="findUserById" parameterType="int"
            resultType="com.example.adweb_backend.mybatis.po.User">
        select * from user where id = #{id}
    </select>
    <select id="findUserByUsername" parameterType="java.lang.String"
            resultType="com.example.adweb_backend.mybatis.po.User">
        select * from user where username = #{username}
    </select>
    <select id="findUserAuthByAuthid" parameterType="int"
            resultType="com.example.adweb_backend.mybatis.po.Auth">
        select * from auth where authid = #{authid}
    </select>

</mapper>